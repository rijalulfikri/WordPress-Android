<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="@dimen/reader_button_minimum_height"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_large">

    <ImageView
        android:tintMode="src_in"
        android:id="@+id/image_count"
        android:layout_width="@dimen/reader_count_icon"
        android:layout_height="@dimen/reader_count_icon"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        tools:src="@drawable/ic_comment_white_24dp"
        tools:tint="?attr/wpColorOnSurfaceMedium"/>

    <!--Set appropriate verbose content description to whole layout programmatically ex. "321 people liked this"-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_extra_small"
        android:importantForAccessibility="no"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="2"/>

</LinearLayout>

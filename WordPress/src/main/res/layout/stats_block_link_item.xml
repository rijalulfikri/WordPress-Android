<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link_wrapper"
    style="@style/StatsBlockLine"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text"
        style="@style/StatsBlockLink"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="@dimen/margin_extra_medium_large"
        android:gravity="center_vertical"
        android:text="@string/unknown"
        tools:drawableStart="@drawable/ic_share_white_24dp"
        tools:text="@string/stats_insights_share_post" />

</LinearLayout>
